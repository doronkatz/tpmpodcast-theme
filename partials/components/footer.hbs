{{!--
    Parameters:
    * footerText (text)
--}}

<footer class="gh-foot gh-outer">
    <div class="gh-foot-inner gh-inner">
        <nav class="gh-foot-menu">
            {{navigation type="secondary"}}
        </nav>
        
        <div class="gh-social-icons">
            <a href="https://www.facebook.com/tpmpodcastshow" target="_blank" rel="noopener noreferrer" class="gh-social-link">
                {{> "icons/facebook"}}
                <span class="sr-only">Facebook</span>
            </a>
            <a href="https://www.linkedin.com/company/the-tpm-podcast-show/" target="_blank" rel="noopener noreferrer" class="gh-social-link">
                {{> "icons/linkedin"}}
                <span class="sr-only">LinkedIn</span>
            </a>
            <a href="https://instagram.com/tpmpodcastshow" target="_blank" rel="noopener noreferrer" class="gh-social-link">
                {{> "icons/instagram"}}
                <span class="sr-only">Instagram</span>
            </a>
            <a href="https://x.com/tpmpodcastshow" target="_blank" rel="noopener noreferrer" class="gh-social-link">
                {{> "icons/twitter"}}
                <span class="sr-only">X (Twitter)</span>
            </a>
        </div>

        <div class="gh-copyright">
            {{#unless footerText}}
                {{@site.title}} &copy; {{date format="YYYY"}}
            {{else}}
                {{footerText}}
            {{/unless}}
        </div>
        
        <div class="gh-sponsors-section">
            <div class="gh-sponsors-title">Proudly Sponsored By</div>
            <div class="gh-sponsors-banners">
                <a href="https://join.fastmail.com/tpmuniversity" target="_blank" rel="noopener" class="gh-sponsor-link">
                    <img src="{{asset "images/fastmail_banner.png"}}" alt="Fastmail - Sponsor">
                </a>
                <a href="https://riverside.sjv.io/tpmpodcast?ref=tpmuniversity.com" target="_blank" rel="noopener" class="gh-sponsor-link">
                    <img src="{{asset "images/riverside_banner.png"}}" alt="Riverside - Sponsor">
                </a>
            </div>
        </div>
    </div>
</footer>
